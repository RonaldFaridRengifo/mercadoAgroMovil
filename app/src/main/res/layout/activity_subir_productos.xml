<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".linearLayuot"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Si desea gestionar sus productos lo puede
            hacer desde el apartado web: "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="www.mercadoagroecologico.org"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Eliga una imagen de su dispositivo:"/>

        <ImageButton
            android:id="@+id/img_producto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/rect_edittext"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Nombre"/>

        <EditText
            android:id="@+id/edt_nombre_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Unidad de venta:"/>

        <Spinner
            android:id="@+id/sp_unidadVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Tipo de venta:"/>

        <Spinner
            android:id="@+id/sp_tipoVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"

            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Pecio: (COP)"/>

        <EditText
            android:id="@+id/edt_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="DescripciÃ³n"/>

        <EditText
            android:id="@+id/edt_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:text="Categoria:"/>

        <Spinner
            android:id="@+id/sp_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_edittext"
            android:textSize="16dp"
            android:fontFamily="serif"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancelar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textSize="16dp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:backgroundTint="@color/gris"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:textSize="16dp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>